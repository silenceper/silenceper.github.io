&lt;/span&gt;&lt;/span&gt;&lt;span class="line"&gt;&lt;span class="cl"&gt;I1116 06:54:50.581056 &lt;span class="m"&gt;1&lt;/span&gt; controllerserver.go:165&lt;span class="o"&gt;]&lt;/span&gt; created volume 9f684dbc-27d8-11eb-884a-0242ac120016 at path /csi-data-dir/9f684dbc-27d8-11eb-884a-0242ac120016
&lt;/span&gt;&lt;/span&gt;&lt;span class="line"&gt;&lt;span class="cl"&gt;I1116 06:54:50.581129 &lt;span class="m"&gt;1&lt;/span&gt; server.go:123&lt;span class="o"&gt;]&lt;/span&gt; GRPC response: &lt;span class="o"&gt;{&lt;/span&gt;&lt;span class="s2"&gt;&amp;#34;volume&amp;#34;&lt;/span&gt;:&lt;span class="o"&gt;{&lt;/span&gt;&lt;span class="s2"&gt;&amp;#34;accessible_topology&amp;#34;&lt;/span&gt;:&lt;span class="o"&gt;[{&lt;/span&gt;&lt;span class="s2"&gt;&amp;#34;segments&amp;#34;&lt;/span&gt;:&lt;span class="o"&gt;{&lt;/span&gt;&lt;span class="s2"&gt;&amp;#34;topology.hostpath.csi/node&amp;#34;&lt;/span&gt;:&lt;span class="s2"&gt;&amp;#34;minikube&amp;#34;&lt;/span&gt;&lt;span class="o"&gt;}}]&lt;/span&gt;,&lt;span class="s2"&gt;&amp;#34;capacity_bytes&amp;#34;&lt;/span&gt;:1073741824,&lt;span class="s2"&gt;&amp;#34;volume_id&amp;#34;&lt;/span&gt;:&lt;span class="s2"&gt;&amp;#34;9f684dbc-27d8-11eb-884a-0242ac120016&amp;#34;&lt;/span&gt;&lt;span class="o"&gt;}}&lt;/span&gt;
